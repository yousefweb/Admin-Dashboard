@model JEIFinalPro.Models.DataModel.CourseCategoryBlogDataModel
@{
    ViewData["Title"] = "Index";
}

<section id="aa-latest-property">
    <div class="container">
        <div class="aa-latest-property-area">
            <div class="aa-title">
                <h2>Latest Courses</h2>
                <span></span>
                <p>Choose Course</p>
            </div>
            <div class="aa-latest-properties-content">
                <div class="row">
                    @foreach (var item in Model.Courses)
                    {
                        <div class="col-md-4">
                            <article class="aa-properties-item">
                                <a href="#" class="aa-properties-item-img">
                                    <img src="~/img/item/1.jpg" alt="img">
                                </a>
                                <div class="aa-tag for-sale">
                                    @item.Venu
                                </div>
                                <div class="aa-properties-item-content">
                                    <div class="aa-properties-info">
                                        <span>Start Date</span>
                                        <span>@item.StartDate.ToShortDateString()</span>
                                        <span>Start Time</span>
                                        <span>@item.StartTime.ToShortTimeString()</span>
                                    </div>
                                    <div class="aa-properties-about">
                                        <h3><a href="#">@item.CourseName</a></h3>
                                        <p>@item.SubTitle</p>
                                    </div>
                                    <div class="aa-properties-detial">
                                        <span class="aa-price">
                                            @item.Price JD
                                        </span>
                                        <a asp-action="Details" asp-controller="Home" asp-route-id="@item.CourseId" class="aa-secondary-btn">More Details</a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<!-- Latest blog -->
<section id="aa-latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-latest-blog-area">
                    <div class="aa-title">
                        <h2>Latest Blog</h2>
                        <span></span>
                        <p>Blogs Info..</p>
                    </div>
                    <div class="aa-latest-blog-content">
                        <div class="row">
                            @foreach (var item in Model.Blogs)
                            {
                                <div class="col-md-4">
                                <article class="aa-blog-single">
                                    <figure class="aa-blog-img">
                                        <a href="#"><img src="~/img/blog-img-1.jpg" alt="img"></a>
                                        <span class="aa-date-tag">@item.CreationDate.ToShortDateString()</span>
                                    </figure>
                                    <div class="aa-blog-single-content">
                                        <h3><a href="#">@item.BlogTitle.</a></h3>
                                        <p>@item.BlogDesc.Substring(0,15)...</p>
                                        <div class="aa-blog-single-bottom">
                                            <a asp-action="BlogDetails" asp-controller="Operations" asp-route-id="@item.BlogId" class="aa-blog-author"><i class="fa fa-user"></i> More</a>
                                            <a href="#" class="aa-blog-comments"><i class="fa fa-comment-o"></i>6</a>
                                        </div>
                                    </div>

                                </article>
                            </div>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Latest blog -->
